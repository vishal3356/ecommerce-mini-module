{
    "name": "mini/laravel-ecommerce-ready",
    "description": "Ready-to-run Laravel-like project skeleton for interview (requires composer to install dependencies).",
    "type": "project",
    "require": {
        "php": "^8.1 || ^8.2",
        "laravel/framework": "^11.0"
    },
    "require-dev": {
        "laravel/breeze": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-install-cmd": [
            "php artisan key:generate"
        ],
        "post-update-cmd": [
            "php artisan key:generate"
        ]
    }
}
